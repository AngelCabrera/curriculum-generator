{% extends "layout.twig" %}
{% block head %}
    <style>
        #edit:hover {
            color: #007bff;
        }
    </style>
{% endblock %}
{% block content %}
    {% if message %}
        <div class="alert alert-success mt-3">{{ message }}</div>
    {% endif %}
    <div>
        <div class="jumbotron jumbotron-fluid bg-primary text-white">
        <a class="btn btn-outline-light" href="/curriculum-generator/" id="edit">Curriculum</a>
            <div class="container">
                <h1 class="display-3">
                    {% block title %}{% endblock %}
                </h1>
                <p class="lead">Añade información relevante para potenciar tu resumen curricular</p>
            </div>
        </div>
        <div class="container">
            {% block form %}{% endblock %}
        </div>
    </div>
{% endblock %}
